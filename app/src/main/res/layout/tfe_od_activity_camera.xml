    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_retake_new"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="@dimen/margin_2dp"
                    android:text="Inspection"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_models"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/margin_2dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_pass_fail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_models"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/margin_2dp"
                    android:text=""
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_next"
                    android:background="@android:color/holo_blue_light"
                    android:layout_toStartOf="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/margin_5dp"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <View
                    android:id="@+id/view"
                    android:layout_centerInParent="true"
                    android:layout_width="1dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/btn_retry"
                    android:background="@android:color/holo_blue_light"
                    android:layout_toEndOf="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/margin_5dp"
                    android:text="Retry"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_retake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/inspkt_lyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ins_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/green"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/msg_lyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@+id/inspkt_lyt"
                >
                <TextView
                    android:id="@+id/txt_retake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="Pass... Would you like to retake  "
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/action_lyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|center_vertical"
                android:layout_toRightOf="@+id/msg_lyt">

                <ImageView
                    android:id="@+id/retake_img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_pass_white_24dp"
                    android:tint="@color/black"
                    android:clickable="true"
                    android:padding="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_5dp"/>

                <ImageView
                    android:id="@+id/cnt_img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:tint="@color/black"
                    android:clickable="true"
                    android:padding="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_5dp"/>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/bottom_sheet_layout"
        layout="@layout/tfe_od_layout_bottom_sheet"
        android:visibility="gone"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
